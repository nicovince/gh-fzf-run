#!/usr/bin/env bash
set -e

function help()
{
    cat <<EOF
Select with fzf a workflow from GitHub Actions to view, watch, cancel.
Usage:
  gh fzf-run

Flags:
  -R, --repo OWNER/REPO\tSelect another repository.
  -h, --help\tShow help for command
EOF
}

REPO=""
while [ $# -gt 0 ]; do
    key="$1"
    case ${key} in
        -h|--help)
            help
            exit 0
            ;;
        -R|--repository)
            REPO="$2"
            shift
            ;;
        *)
            PARAMS="${PARAMS} ${1}"
            ;;
    esac
    shift
done
eval set -- "${PARAMS}"
if [ -z "$1" ]; then
    ACTION="view"
else
    ACTION="$1"
fi

REPO_OPT=""
if [ -n "${REPO}" ]; then
    REPO_OPT="-R ${REPO}"
fi

# Check dependencies are available
if ! type -p fzf >/dev/null; then
  echo "fzf not found on the system" >&2
  exit 1
fi

JSON_FIELDS="--json status,conclusion,displayTitle,workflowName,headBranch,event,databaseId"
TITLES="[\"STATUS\", \"CONCLUSION\", \"WORKFLOW\", \"TITLE\", \"BRANCH\", \"EVENT\", \"ID\"]"
FIELDS="[.status, .conclusion, .workflowName, .displayTitle, .headBranch, .event, .databaseId]"
COMPLETED_JQUERY="(${TITLES}), (.[] | [select(.status | test(\"completed\"))] | (.[] | ${FIELDS})) | @tsv"
NOT_COMPLETED_JQUERY="(${TITLES}), (map (select(.conclusion ==\"\").conclusion=\"inprogress\") | .[] | [select(.status | test(\"completed\") | not)] | (.[] | ${FIELDS})) | @tsv"
STATUS_ANY_JQUERY="(${TITLES}), (map (select(.conclusion ==\"\").conclusion=\"inprogress\") | .[] | (${FIELDS})) | @tsv"

case ${ACTION} in
    cancel|watch)
        QUERY="${NOT_COMPLETED_JQUERY}"
        ;;
    delete|download|rerun)
        QUERY="${COMPLETED_JQUERY}"
        ;;
    view)
        QUERY="${STATUS_ANY_JQUERY}"
        ;;
    *)
        echo "Unknown action ${ACTION}"
        exit 1
esac

wf_sel=$(gh run ${REPO_OPT} list ${JSON_FIELDS} --jq "${QUERY}" | column -ts $'\t' | fzf -0 --header-lines=1 --multi | jq -r -R -s 'split("\n") | [ .[] | select(length > 0)]')
wf_sel_ids="$(echo "${wf_sel}" | jq -r '.[] | split(" ") | [.[] | select(length > 0)] | .[-1]')"
for wf_id in ${wf_sel_ids}; do
    gh run ${REPO_OPT} ${ACTION} ${wf_id}
done
